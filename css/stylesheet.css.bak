/*background color*/ 
body {
	background-color: #90EE90;
}

h1{
font-family: 'Crete Round', serif;
font-weight: 500;
  font-style: normal;
  font-size: 30px;
  line-height: 1.15;
  color:#2F4F4F;
}

h2, p{
	font-family: Arial, sans-serif;
}

	
/*style for navigation bar*/ 
.nav {
    background-color: #FFFAF0;
    text-align: center;
	list-style: none
}
.nav a {
	  font-size: 18px;
	  text-align: center;
	  color: #9400D3;
	  padding: 10px;
}
.nav a:hover {
	background-color: #DDA0DD;
	color: #FFF0F5;
}
img {
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 800px;
  height: 600px
}
/*video size*/ 
iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 25%;
}

